		"/user/shopping-list": {
			"get": {
				"tags": ["User"],
				"parameters": [
					{
						"in": "header",
						"name": "Authorization",
						"required": true,
						"schema": {
							"type": "string"
						}
					}
				],
				"operationId": "getUserShopinList",
				"responses": {
					"200": {
						"description": "A list of ingredients that were added to the shopping list",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"status": {
											"type": "integer",
											"example": 200
										},
										"message": {
											"type": "string",
											"default": "Success"
										},
										"data": {
											"type": "object",
											"properties": {
												"shoppingList": { "$ref": "#/components/schemas/RecipeIngredients" }
											}
										}
									}
								}
							}
						}
					},
					"400": {
						"$ref": "#/components/responses/BadRequest"
					},
					"401": {
						"$ref": "#/components/responses/UnauthorizedError"
					},
					"404": {
						"description": "Not found!",
						"content": {
							"application/json": {
								"schema": {
									"type": "string"
								}
							}
						}
					}
				},
				"security": [
					{
						"jwtAuth": []
					}
				]
			},
			"patch": {
				"tags": ["User"],
				"operationId": "updateShoppingList",
				"requestBody": {
					"required": true,
					"description": "Give only id of ingredient  and measure for add and only id for remove",
					"content": {
						"application/json": {
							"schema": {
								"type": "object",
								"required": ["id"],
								"properties": {
									"ingredientId": {
										"type": "string"
									},
									"measure": {
										"type": "string",
										"example": "2 tbs"
									}
								}
							}
						}
					}
				},
				"responses": {
					"200": {
						"description": "Shopping list updated. Returns or added Ingredient object or 'removedIngredientId'",
						"content": {
							"application/json": {
								"schema": {
									"oneOf": [
										{
											"type": "object",
											"properties": {
												"status": {
													"type": "integer",
													"example": 200
												},
												"message": {
													"type": "string",
													"example": "Success"
												},
												"addedIngredient": {
													"$ref": "#/components/schemas/RecipeIngredient"
												}
											}
										},
										{
											"type": "object",
											"properties": {
												"status": {
													"type": "integer",
													"example": 200
												},
												"message": {
													"type": "string",
													"example": "Success"
												},
												"data": {
													"type": "object",
													"properties": {
														"removedIngredientId": {
															"type": "string"
														}
													}
												}
											}
										}
									]
								}
							}
						}
					},

					"400": {
						"$ref": "#/components/responses/BadRequest"
					},
					"401": {
						"$ref": "#/components/responses/UnauthorizedError"
					},
					"404": {
						"description": "Ingredient not found!",
						"content": {
							"application/json": {
								"schema": {
									"type": "object",
									"properties": {
										"status": {
											"type": "integer",
											"default": 404
										},
										"message": {
											"type": "string",
											"example": "Failed to update! Ingredient not found!"
										}
									}
								}
							}
						}
					}
				},
				"security": [
					{
						"jwtAuth": []
					}
				]
			}
		},
