		"/user/own-recipes": {
			"get": {
				"tags": ["User"],
				"summary": "Get user own recipes",
				"operationId": "getOwnRecipes",
				"responses": {
					"200": {
						"$ref": "#/components/schemas/Recipes"
					},
					"401": {
						"$ref": "#/components/responses/UnauthorizedError"
					}
				},
				"security": [
					{
						"jwtAuth": []
					}
